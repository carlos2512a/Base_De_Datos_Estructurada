-- predefined type, no DDL - MDSYS.SDO_GEOMETRY

-- predefined type, no DDL - XMLTYPE

CREATE TABLE cargo (
    id_cargo          VARCHAR2(50) NOT NULL,
    nombre_cargo      VARCHAR2(50) NOT NULL,
    describcion_cargo VARCHAR2(50) NOT NULL
);

ALTER TABLE cargo ADD CONSTRAINT cargo_pk PRIMARY KEY ( id_cargo );

CREATE TABLE comuna (
    id_comuna                    VARCHAR2(50) NOT NULL,
    nombre_com                   VARCHAR2(50) NOT NULL,
    departamento_id_departamento VARCHAR2(50) NOT NULL
);

CREATE UNIQUE INDEX comuna__idx ON
    comuna (
        departamento_id_departamento
    ASC );

ALTER TABLE comuna ADD CONSTRAINT comuna_pk PRIMARY KEY ( id_comuna );

CREATE TABLE departamento (
    id_departamento VARCHAR2(50) NOT NULL,
    nombre_dep      VARCHAR2(50) NOT NULL,
    ubicacion_dep   VARCHAR2(50) NOT NULL
);

ALTER TABLE departamento ADD CONSTRAINT departamento_pk PRIMARY KEY ( id_departamento );

CREATE TABLE empleado (
    id_empleado                  VARCHAR2(50) NOT NULL,
    nombre_em                    VARCHAR2(50) NOT NULL,
    apellido_em                  VARCHAR2(50) NOT NULL,
    sueldo_em                    VARCHAR2(50) NOT NULL,
    fecha_contra_em              VARCHAR2(50) NOT NULL,
    porcentaje_em                VARCHAR2(50) NOT NULL,
    cargo_id_cargo               VARCHAR2(50) NOT NULL,
    departamento_id_departamento VARCHAR2(50) NOT NULL
);

ALTER TABLE empleado
    ADD CONSTRAINT empleado_pk PRIMARY KEY ( id_empleado,
                                             cargo_id_cargo,
                                             departamento_id_departamento );

ALTER TABLE comuna
    ADD CONSTRAINT comuna_departamento_fk FOREIGN KEY ( departamento_id_departamento )
        REFERENCES departamento ( id_departamento );

ALTER TABLE empleado
    ADD CONSTRAINT empleado_cargo_fk FOREIGN KEY ( cargo_id_cargo )
        REFERENCES cargo ( id_cargo );

ALTER TABLE empleado
    ADD CONSTRAINT empleado_departamento_fk FOREIGN KEY ( departamento_id_departamento )
        REFERENCES departamento ( id_departamento );



