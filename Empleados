CREATE TABLE CARGO 				
    ( 				
     ID_CARGO          VARCHAR2 (50)  NOT NULL , 				
     NOMBRE_CARGO      VARCHAR2 (50)  NOT NULL , 				
     DESCRIBCION_CARGO VARCHAR2 (100)  NOT NULL 				
    ) 				
;				
				
ALTER TABLE CARGO 				
    ADD CONSTRAINT CARGO_PK PRIMARY KEY ( ID_CARGO ) ;				
				
CREATE TABLE COMUNA 				
    ( 				
     CODIGO_COM VARCHAR2 (50)  NOT NULL , 				
     NOMBRE_COM VARCHAR2 (50)  NOT NULL 				
    ) 				
;				
				
ALTER TABLE COMUNA 				
    ADD CONSTRAINT COMUNA_PK PRIMARY KEY ( CODIGO_COM ) ;				
				
CREATE TABLE DEPARTAMENTO 				
    ( 				
     ID_DEPARTAMENTO   VARCHAR2 (50)  NOT NULL , 				
     NOMBRE_DEP        VARCHAR2 (50)  NOT NULL , 				
     UBICACION_DEP     VARCHAR2 (50)  NOT NULL , 				
     COMUNA_CODIGO_COM VARCHAR2 (50)  NOT NULL 				
    ) 				
;				
				
ALTER TABLE DEPARTAMENTO 				
    ADD CONSTRAINT DEPARTAMENTO_PK PRIMARY KEY ( ID_DEPARTAMENTO ) ;				
				
CREATE TABLE EMPLEADO 				
    ( 				
     ID_EMPLEADO                  VARCHAR2 (50)  NOT NULL , 				
     NOMBRE_EM                    VARCHAR2 (50)  NOT NULL , 				
     APELLIDO_EM                  VARCHAR2 (50)  NOT NULL , 				
     SUELDO_EM                    VARCHAR2 (50)  NOT NULL , 				
     FECHA_CONTRATO_EM            DATE  NOT NULL , 				
     PORCENTAJE_EM                NUMBER (1,50)  NOT NULL , 				
     COMUNA_CODIGO_COM            VARCHAR2 (50)  NOT NULL , 				
     DEPARTAMENTO_ID_DEPARTAMENTO VARCHAR2 (50)  NOT NULL , 				
     CARGO_ID_CARGO               VARCHAR2 (50)  NOT NULL 				
    ) 				
;				
				
ALTER TABLE EMPLEADO 				
    ADD CONSTRAINT EMPLEADO_PK PRIMARY KEY ( ID_EMPLEADO ) ;				
				
ALTER TABLE DEPARTAMENTO 				
    ADD CONSTRAINT DEPARTAMENTO_COMUNA_FK FOREIGN KEY 				
    ( 				
     COMUNA_CODIGO_COM				
    ) 				
    REFERENCES COMUNA 				
    ( 				
     CODIGO_COM				
    ) 				
;				
				
ALTER TABLE EMPLEADO 				
    ADD CONSTRAINT EMPLEADO_CARGO_FK FOREIGN KEY 				
    ( 				
     CARGO_ID_CARGO				
    ) 				
    REFERENCES CARGO 				
    ( 				
     ID_CARGO				
    ) 				
;				
				
ALTER TABLE EMPLEADO 				
    ADD CONSTRAINT EMPLEADO_COMUNA_FK FOREIGN KEY 				
    ( 				
     COMUNA_CODIGO_COM				
    ) 				
    REFERENCES COMUNA 				
    ( 				
     CODIGO_COM				
    ) 				
;				
				
ALTER TABLE EMPLEADO 				
    ADD CONSTRAINT EMPLEADO_DEPARTAMENTO_FK FOREIGN KEY 				
    ( 				
     DEPARTAMENTO_ID_DEPARTAMENTO				
    ) 				
    REFERENCES DEPARTAMENTO 				
    ( 				
     ID_DEPARTAMENTO				
    ) 				
;				
				
				
				
